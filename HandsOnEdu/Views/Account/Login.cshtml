@model HandsOnEdu.Data.Dto.LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Themes/_Layout.cshtml";
}

<div b-loda3xthv2="" class="container">
    <main b-loda3xthv2="" role="main" class="pb-3">
        <h1>Log in</h1>
        <div class="row">
            <div class="col-md-4">
                <section>
                    <form id="account" method="post" novalidate="novalidate">
                        <h2>Use a local account to log in.</h2>
                        <hr>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="text-danger validation-summary-errors" role="alert">
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        <div class="form-floating mb-3">
                            <input class="single-input-primary" autocomplete="username" aria-required="true" placeholder="name@example.com" type="email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="Input_Email" name="Email" value="">
                           
                            <span class="text-danger field-validation-valid" data-valmsg-for="Input.Email" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="single-input-primary" autocomplete="current-password" aria-required="true" placeholder="password" type="password" data-val="true" data-val-required="The Password field is required." id="Input_Password" name="Password">
                         
                            <span class="text-danger field-validation-valid" data-valmsg-for="Input.Password" data-valmsg-replace="true"></span>
                        </div>
                        <div class="mb-4">
                            <button id="login-submit" type="submit" class="w-100 genric-btn info">Log in</button>
                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" href="/Identity/Account/ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                @* <a href="/Identity/Account/Register?returnUrl=%2F">Register as a new user</a> *@
                                <a href="/Account/Register">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" href="/Identity/Account/ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                        <input name="__RequestVerificationToken" type="hidden" value="CfDJ8EXzcei8wUlBrAJfLIqvbXN9pYmVvVVb-dYueRZ--a-WXubTbw1ENQqDBpmfOrKO3P097-r6Bo8Uz2jlsbx2s005YrJFE2NVEL6S5pgStLi4pnHZiQ7nYTST-eI7t02ywZMVtoA_KSK3jo7Jnuwi_K0"><input name="Input.RememberMe" type="hidden" value="false">
                    </form>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <h3>Use another service to log in.</h3>
                    <hr>
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </main>
</div>
